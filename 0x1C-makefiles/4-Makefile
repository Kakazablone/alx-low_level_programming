CC=gcc
CFLAGS=-Wall -Werror -Wextra -pedantic
SRC=school.c main.c
OBJ=$(SRC:%.c=%.o)
NAME=school
RM=rm -f

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(CFLAGS) $(OBJ) -o $(NAME)

%.o: %.c m.h
	$(CC) $(CFLAGS) -c -o $@ $<

clean:
	$(RM) *~ $(NAME)

oclean:
	$(RM) $(OBJ)

fclean: clean oclean

re: oclean all